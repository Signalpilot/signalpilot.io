    },
    {
      "source": "/ru/blog/:path*",
      "destination": "/ru/",
      "permanent": true
    },
    {
      "source": "/tr/blog/:path*",
      "destination": "/tr/",
      "permanent": true
    },
    {
      "source": "/curriculum/:path*",
      "destination": "https://education.signalpilot.io/",
      "permanent": true
    },
    {
      "source": "/lessons/:path*",
